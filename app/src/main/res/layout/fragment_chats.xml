<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_height="match_parent"
    tools:context=".fragments.Chats">

    <ImageView
        android:visibility="gone"
        android:id="@+id/no_item_photo"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_centerVertical="true"
        android:src="@drawable/no_request" />

    <TextView
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:id="@+id/no_item_text"
        android:layout_below="@id/no_item_photo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="There is no Discussion until now !"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold" />

   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/chats_list"
       android:background="#FAFAFA"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true" />

</RelativeLayout>