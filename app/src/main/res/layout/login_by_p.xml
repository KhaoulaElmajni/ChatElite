<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".activities.LoginByEmail">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/login_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/the_login">

        </ImageView>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_image"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dp"
            android:background="@drawable/start"
            android:elevation="8dp">

            <EditText
                android:id="@+id/phone_number_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/input"
                android:elevation="8dp"
                android:gravity="center"
                android:hint="Enter your phone number"
                android:inputType="phone"
                android:padding="4dp"
                android:text=""
                android:textSize="20sp" />


            <EditText
                android:id="@+id/verification_code_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/phone_number_input"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="23dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/input"
                android:elevation="8dp"
                android:gravity="center"
                android:hint="Enter the verification code"
                android:inputType="phone"
                android:padding="4dp"
                android:text=""
                android:textSize="20sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/send_ver_code_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/verification_code_input"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="19dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_button"
                android:elevation="8dp"
                android:padding="4dp"
                android:text="Send Code"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />
            <Button
                android:id="@+id/verify_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/send_ver_code_button"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="19dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/login_button"
                android:elevation="8dp"
                android:padding="4dp"
                android:text="Verify"
                android:visibility="visible"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>