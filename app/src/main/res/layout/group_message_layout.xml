<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/messages_date"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/messages_date"
        android:elevation="3dp"
        android:gravity="center"
        android:padding="2dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/messages_date"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginRight="8dp"
            android:id="@+id/the_second_message_sender"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/the_group_message_sender"
            android:elevation="1dp"
            android:padding="4dp"
            android:text="Amanda Smith"
            android:textColor="@android:color/black"
            android:textSize="10sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/message_receiver_image_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/messages_date"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/receiver_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@drawable/receiver_messages_layout"
            android:elevation="2dp"
            android:padding="10dp"
            android:text="sender messages"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/second_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sender messages"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/messages_date"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginRight="8dp"
            android:id="@+id/the_first_message_sender"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/the_group_message_sender"
            android:elevation="1dp"
            android:padding="4dp"
            android:text="Amanda Smith"
            android:textColor="@android:color/black"
            android:textSize="10sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/message_sender_image_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:scaleType="centerCrop" />

        <TextView
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            android:id="@+id/sender_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:background="@drawable/sender_messages_layout"
            android:elevation="2dp"
            android:padding="10dp"
            android:text="sender messages"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:visibility="gone" />

        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="sender messages"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/seen"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/seen" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>